<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:togglee="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <com.example.administrator.toggletest.ToggleView
        android:id="@+id/toggleview"
        android:layout_width="wrap_content"
        togglee:slide_button="@drawable/slide_button"
        togglee:switch_background="@drawable/switch_background"
        togglee:slide_button_state="false"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>



</RelativeLayout>
